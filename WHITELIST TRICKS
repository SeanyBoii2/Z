-- === CREATE SCRIPT CARDS ===
local loadedScripts = {} -- track which scripts are loaded

for i, scriptData in ipairs(SCRIPTS) do
	local Card = Instance.new("Frame")
	Card.Name = "Card_" .. scriptData.Name
	Card.Size = UDim2.new(1, 0, 0, 82)
	Card.BackgroundColor3 = Theme.Card
	Card.BorderSizePixel = 0
	Card.LayoutOrder = i
	Card.Parent = ContentFrame
	addCorner(Card, 10)
	addStroke(Card, Theme.Border, 1)

	-- Icon
	local IconLabel = Instance.new("TextLabel")
	IconLabel.Size = UDim2.new(0, 40, 0, 40)
	IconLabel.Position = UDim2.new(0, 14, 0.5, -20)
	IconLabel.BackgroundColor3 = Theme.Accent
	IconLabel.BackgroundTransparency = 0.85
	IconLabel.Text = scriptData.Icon
	IconLabel.TextSize = 20
	IconLabel.Font = Enum.Font.GothamBold
	IconLabel.TextColor3 = Theme.TextPrimary
	IconLabel.BorderSizePixel = 0
	IconLabel.Parent = Card
	addCorner(IconLabel, 8)

	-- Name
	local NameLabel = Instance.new("TextLabel")
	NameLabel.Size = UDim2.new(1, -150, 0, 20)
	NameLabel.Position = UDim2.new(0, 66, 0, 14)
	NameLabel.BackgroundTransparency = 1
	NameLabel.Text = scriptData.Name
	NameLabel.TextColor3 = Theme.TextPrimary
	NameLabel.TextSize = 14
	NameLabel.Font = Enum.Font.GothamBold
	NameLabel.TextXAlignment = Enum.TextXAlignment.Left
	NameLabel.TextTruncate = Enum.TextTruncate.AtEnd
	NameLabel.Parent = Card

	-- Description
	local DescLabel = Instance.new("TextLabel")
	DescLabel.Size = UDim2.new(1, -80, 0, 28)
	DescLabel.Position = UDim2.new(0, 66, 0, 36)
	DescLabel.BackgroundTransparency = 1
	DescLabel.Text = scriptData.Description
	DescLabel.TextColor3 = Theme.TextSecondary
	DescLabel.TextSize = 11
	DescLabel.Font = Enum.Font.Gotham
	DescLabel.TextXAlignment = Enum.TextXAlignment.Left
	DescLabel.TextWrapped = true
	DescLabel.Parent = Card

	-- Load Button
	local LoadBtn = Instance.new("TextButton")
	LoadBtn.Name = "LoadBtn"
	LoadBtn.Size = UDim2.new(0, 68, 0, 32)
	LoadBtn.Position = UDim2.new(1, -80, 0.5, -16)
	LoadBtn.BackgroundColor3 = Theme.Accent
	LoadBtn.Text = "Load"
	LoadBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
	LoadBtn.TextSize = 12
	LoadBtn.Font = Enum.Font.GothamBold
	LoadBtn.BorderSizePixel = 0
	LoadBtn.Parent = Card
	addCorner(LoadBtn, 8)

	-- Hover effects for card
	Card.InputBegan:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseMovement then
			tween(Card, {BackgroundColor3 = Theme.CardHover}, 0.2)
		end
	end)
	Card.InputEnded:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseMovement then
			tween(Card, {BackgroundColor3 = Theme.Card}, 0.2)
		end
	end)

	-- Hover effects for button
	LoadBtn.InputBegan:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseMovement then
			tween(LoadBtn, {BackgroundColor3 = Theme.AccentHover}, 0.15)
		end
	end)
	LoadBtn.InputEnded:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseMovement then
			if not loadedScripts[scriptData.Name] then
				tween(LoadBtn, {BackgroundColor3 = Theme.Accent}, 0.15)
			end
		end
	end)

	-- Click to load
	LoadBtn.MouseButton1Click:Connect(function()
		if loadedScripts[scriptData.Name] then return end
		loadedScripts[scriptData.Name] = true

		-- Loading state
		LoadBtn.Text = "..."
		tween(LoadBtn, {BackgroundColor3 = Theme.TextSecondary}, 0.15)

		local success, err = pcall(function()
			loadstring(game:HttpGet(scriptData.URL))()
		end)

		if success then
			LoadBtn.Text = "‚úì"
			tween(LoadBtn, {BackgroundColor3 = Theme.Success}, 0.25)
			sendNotification("‚úÖ Loaded", scriptData.Name .. " loaded successfully!")
		else
			LoadBtn.Text = "Error"
			tween(LoadBtn, {BackgroundColor3 = Theme.CloseRed}, 0.25)
			loadedScripts[scriptData.Name] = false
			sendNotification("‚ùå Error", "Failed to load " .. scriptData.Name)
			warn("Load error: " .. tostring(err))

			task.wait(2)
			if not loadedScripts[scriptData.Name] then
				LoadBtn.Text = "Load"
				tween(LoadBtn, {BackgroundColor3 = Theme.Accent}, 0.25)
			end
		end
	end)
end

-- === FOOTER ===
local Footer = Instance.new("TextLabel")
Footer.Name = "Footer"
Footer.Size = UDim2.new(1, 0, 0, 28)
Footer.BackgroundTransparency = 1
Footer.Text = "Discord: spookyie  ‚Ä¢  Press M to toggle"
Footer.TextColor3 = Theme.TextSecondary
Footer.TextSize = 10
Footer.Font = Enum.Font.Gotham
Footer.LayoutOrder = 100
Footer.Parent = ContentFrame

--================================--
--       ANIMATIONS / UX          --
--================================--

-- Calculate target height
local totalHeight = 48 + 12 + 52 + 8 + 22  -- titlebar + top pad + welcome + gap + section label
for _, scriptData in ipairs(SCRIPTS) do
	totalHeight += 82 + 8  -- card + gap
end
totalHeight += 28 + 12  -- footer + bottom pad
totalHeight = math.min(totalHeight, 500) -- max height cap

-- Open animation
MainFrame.BackgroundTransparency = 1
MainFrame.Size = UDim2.new(0, 340, 0, 0)
task.wait(0.1)

tween(MainFrame, {
	Size = UDim2.new(0, 340, 0, totalHeight),
	BackgroundTransparency = 0,
}, 0.45, Enum.EasingStyle.Back)

-- === DRAGGING ===
local dragging, dragStart, startPos

TitleBar.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = MainFrame.Position
	end
end)

UserInputService.InputChanged:Connect(function(input)
	if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
		local delta = input.Position - dragStart
		MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
	end
end)

UserInputService.InputEnded:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = false
	end
end)

-- === CLOSE BUTTON ===
CloseBtn.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then
		tween(CloseBtn, {BackgroundTransparency = 0.6, TextColor3 = Theme.CloseRedHover}, 0.15)
	end
end)
CloseBtn.InputEnded:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then
		tween(CloseBtn, {BackgroundTransparency = 0.85, TextColor3 = Theme.CloseRed}, 0.15)
	end
end)

CloseBtn.MouseButton1Click:Connect(function()
	tween(MainFrame, {
		Size = UDim2.new(0, 340, 0, 0),
		BackgroundTransparency = 1,
	}, 0.35, Enum.EasingStyle.Back, Enum.EasingDirection.In)
	task.wait(0.4)
	ScreenGui:Destroy()
end)

-- === MINIMIZE / TOGGLE (M key) ===
local minimized = false

local function toggleGui()
	minimized = not minimized
	if minimized then
		tween(MainFrame, {
			Size = UDim2.new(0, 340, 0, 0),
			BackgroundTransparency = 0.6,
		}, 0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In)
	else
		tween(MainFrame, {
			Size = UDim2.new(0, 340, 0, totalHeight),
			BackgroundTransparency = 0,
		}, 0.35, Enum.EasingStyle.Back)
	end
end

MinBtn.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then
		tween(MinBtn, {BackgroundTransparency = 0.6}, 0.15)
	end
end)
MinBtn.InputEnded:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then
		tween(MinBtn, {BackgroundTransparency = 0.85}, 0.15)
	end
end)

MinBtn.MouseButton1Click:Connect(toggleGui)

UserInputService.InputBegan:Connect(function(input, processed)
	if processed then return end
	if input.KeyCode == Enum.KeyCode.M then
		toggleGui()
	end
end)

print("‚úÖ Script Hub loaded successfully!")
